         <record id="wds_produits_costs_view" model="ir.ui.view">
            <field name="name">wds_produits_costs</field>
            <field name="model">product.product.tree</field>
            <field name="arch" type="xml">
                <tree string="Product Variants" editable="bottom">
                    <field name="default_code"/>
                    <field name="name"/>
                    <field name="attribute_value_ids" widget="many2many_tags"/>
                    <field name="lst_price"/>
                    <field name="standard_price"/>
                    <field name="price" invisible="not context.get('pricelist',False)"/>
                    <field name="uom_id"/>
                    <field name="ean13"/>
                    <field name="state" invisible="1"/>
                    <field name="product_tmpl_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="wds_produits_costs_action" model="ir.actions.act_window">
