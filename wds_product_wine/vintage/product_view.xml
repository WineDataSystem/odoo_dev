	<record id="product_inherited_template_form_view" model="ir.ui.view">
		<field name="name">wds.product.template.product.form</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_form_view"/>
		<field eval="7" name="priority"/>
		<field name="arch" type="xml">
			<!--<field name="seller_ids" position="replace">-->
				<!--<field name="id" invisible="1"/>-->
				<!--<field name='seller_ids' context="{'default_product_tmpl_id':id}"/>-->
			<!--</field>-->
			<field name="name" position="replace">
				<field name="name" readonly="1" class="oe_inline"/>
			</field>
			<xpath expr="//div[@class='oe_left']/div[@class='oe_title']" position="inside">
				<separator string=" "/>
				<newline/>
				<label class="oe_edit_only" for="vintage" string="Product Vintage"/>
				<h3  >
					<field name="vintage" placeholder="Vintage..." on_change="onchange_vintage(product_wine_id,vintage)" class="oe_inline" readonly="context.get('variant_ok',False)"/>
				</h3>
			</xpath>
			<field name="sale_ok" 		position="replace"/>
			<label  for="sale_ok" 		position="replace"/>
			<xpath expr="//div/div[@name='options']/div" position="inside">
				<div>
					<h3>
						<field name="product_brand_id" placeholder="--Marque--" readonly="context.get('variant_ok',False)" />
						<field name="product_wine_id" on_change="onchange_vintage(product_wine_id,vintage)" placeholder="wine" readonly="context.get('variant_ok',False)" />
					</h3>
				</div>
			</xpath>
			<xpath expr="//div[@class='oe_chatter']"  		position="after">
				<footer class="oe_edit_only" >
					<!--<button name="write" string="Save" type="object" class="oe_highlight oe_edit_only" style="color:red" />
					or
					<button string="Cancel" class="oe_link oe_edit_only" special="cancel"/>-->
				</footer>
			</xpath>
			<field name="active"  position="after">
				<field name="sale_ok" />
				<!--<field name="purchase_ok" attrs="{'readonly': [('is_product_variant', '=', False)]}"/>-->
			</field>
			<xpath expr="//page[@string='Information']" position="before">
				<page string="Viticulture">
					<group name="viticulture">
						<group name="left">
							<field name="classification_id"   placeholder="--Select--"/>
							<field name="alcoholic_strength"  />
						</group >
					</group>
				</page>
				<page string="Press"   	>
					<group name="Press" colspan="4" cols="4">
						<field name="id" invisible="1"/>
						<field name="press_ids" context="{'default_product_id':id}" nolabel="1" colspan="4">
							<tree string="Presses" editable="bottom">
								<button name="show_press_form" string="DÃ©tails" type="object" icon="terp-stock_zoom" />
								<field name="lang_id"		placeholder="--Select--"/>
								<field name="name"/>
								<field name="partner_id"	placeholder="--Select--"/>
								<field name="date"/>
								<field name="note"/>
								<field name="priority"/>
							</tree>
						</field>
					</group>
				</page>
			</xpath>
		</field>
	</record>
	<record id="product_inherited_template_tree_view" model="ir.ui.view">
		<field name="name">wds.product.template.tree</field>
		<field name="model">product.template</field>
		<field name="inherit_id" ref="product.product_template_tree_view"/>
		<field name="arch" type="xml">
			<field name="name" position="after" >
				<field name="vintage" options='{"no_open":True}' invisible="context.get('vintage',False)" />
				<field name="alcoholic_strength"  />
				<field name="classification_id"  />
			</field>
		</field>
	</record>
