<openerp>
    <data>
        <record id="invoice_line_list_tree" model="ir.ui.view">
            <field name="name">Liste des lignes de facture</field>
            <field name="model">account.invoice.line</field>
            <field name="view_mode">tree,form</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="invoice_id"/>
                    <field name="partner_id"/>
                    <field name="create_date"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="uos_id" groups="product.group_uom"/>
                    <field name="price_unit"/>
                    <field name="price_subtotal"/>
                    <field name="discount"/>
                </tree>
            </field>
        </record>

        <record id="action_invoice_line_list" model="ir.actions.act_window">
            <field name="name">Liste des lignes de facture</field>
            <field name="res_model">account.invoice.line</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="invoice_line_list_tree"/>
                <!--<field name="target">inline</field>-->
        </record>

    </data>
</openerp>

